@model Mardis.Engine.Web.ViewModel.PollsterViewModels.PollsterRegisterViewModel
@{
    ViewData["Title"] = "Gestión de Mercaderista";
    ViewData["Description"] = "Agregar/Editar Mercaderista";
}

@section buttons{}
@section filters{}
<div class="mardis_profile">
    <form asp-action="PollsterRegister" asp-route-returnurl="@ViewData["ReturnUrl"]" method="POST" class="form-horizontal">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-md-7 control-label-back">Información General del Mercaderista</label>


            </div>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger "></div>
            <div class="form-group">
                <label asp-for="Id" class="col-md-2 control-label  text-title"></label>
                <div class="col-md-1">
                    <input asp-for="Id" class="form-control " name="Id" />
                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="col-md-2 control-label  text-title"></label>
                <div class="col-md-3">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <label asp-for="IMEI" class="col-md-2 control-label  text-title"></label>
                <div class="col-md-3">
                    <input asp-for="IMEI" class="form-control" />
                    <span asp-validation-for="IMEI" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <label asp-for="Qsupport" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="Qsupport" class="form-control" />
                    <span asp-validation-for="Qsupport" class="text-danger"></span>
                </div>
            </div>



            <div class="form-group">
                <label asp-for="Status" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <select asp-for="Status" class="form-control">
                        <option value="A">Activo</option>
                        <option value="D">Desactivado</option>
                    </select>
                </div>
                <label asp-for="Oficina" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="Oficina" class="form-control" />
                    <span asp-validation-for="Oficina" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="UserCel" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="UserCel" class="form-control" />
                    <span asp-validation-for="UserCel" class="text-danger"></span>
                </div>
                <label asp-for="PassCel" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="PassCel" class="form-control" />
                    <span asp-validation-for="PassCel" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Fecha_Inicio" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="Fecha_Inicio" class="form-control" />
                    <span asp-validation-for="Fecha_Inicio" class="text-danger"></span>
                </div>
                <label asp-for="Fecha_Fin" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="Fecha_Fin" class="form-control" />
                    <span asp-validation-for="Fecha_Fin" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div style="margin-top: 7px;"></div>
            <div class="mardisStyle">
                <div class="row">
                    <div class="col-sm-12" style="text-align: center">
                        <button type="submit" class="btn btn-primary" id="btnGuardar">Guardar</button>
                        <button type="button" class="btn btn-default btn-sm" id="btnCancelar" onclick="window.history.back();">Salir</button>
                    </div>
                </div>
            </div>
            @Html.Partial("../task/SearchBranchesPartial")
        </div>
    </form>
    <div>
        <div>

        </div>

